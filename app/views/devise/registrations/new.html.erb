<div class="mar-t">
      </div>
    <div class="row">
        <div class="col-md-3 col-md-offset-4 border">
            <div class="account-box">
                <div class="logo ">
                    <legend>Sign Up</legend>
                </div>
             <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
                <div class="form-group">
      <%= f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "Email Address" %>
                </div>
                <div class="form-group">
                     <%= f.password_field :password, :class => "form-control" , :placeholder => "password"%>
                </div>
                <div class="form-group">
                      <%= f.password_field :password_confirmation,  :class => "form-control", :placeholder => "Password confirmation"%>
                </div>
                <label class="checkbox">
                     <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
      <% end -%>
                  
                </label>
                <div><%= f.submit "Sign up", :class => "btn btn-primary btn-block" %></div>
           
                <div class="or-box row-block">
                    <div class="row">
                        <div class="col-md-12 row-block">
                            <%= render "devise/shared/links" %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
      <% end %> 
</div>

